{
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
  },
  "include": ["../src/**/*.ts"],
  "exclude": ["../node_modules"]
}
